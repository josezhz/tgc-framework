<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>
    <div class="container">
        {{#if success_messages}}
        {{#each success_messages}}
        <div class="alert alert-success">{{this}}</div>
        {{/each}}
        {{/if}}

        {{#if error_messages}}
        {{#each eeror_messages}}
        <div class="alert alert-danger">{{this}}</div>
        {{/each}}
        {{/if}}

        <div>
            {{#if user}}
            Hi, {{user.username}}
            <a href="/users/logout" class="ml-3 btn btn-primary btn-sm">Logout</a>
            {{else}}
            Hi, stranger
            <a href="/users/login" class="ml-3 btn btn-primary btn-sm">Login</a>
            {{/if}}
        </div>

        {{#block "content"}}{{/block}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>